<?xml version="1.0" encoding="UTF-8"?>
<mime-info>
	<mime-type type="text/x-abap">
		<_comment>ABAP</_comment>
		<glob pattern="*.abap" />
		<sub-class-of type="text/plain" />
	</mime-type>
	
	<mime-type type="text/x-antlr">
		<_comment>Antlr grammer</_comment>
		<glob pattern="*.g4" />
		<sub-class-of type="text/plain" />
	</mime-type>
	
	<mime-type type="text/x-scss">
		<_comment>SCSS</_comment>
		<glob pattern="*.scss" />
		<sub-class-of type="text/css" />
	</mime-type>
	
	<mime-type type="text/x-apache">
		<_comment>Apache conf file</_comment>
		<glob pattern="*.htaccess" />
		<glob pattern="apache2.conf" />
		<glob pattern="httpd.conf" />
		<sub-class-of type="text/plain" />
	</mime-type>
	
	<mime-type type="text/x-asp">
		<_comment>ASP</_comment>
		<glob pattern="*.asax" />
		<glob pattern="*.ascx" />
		<glob pattern="*.ashx" />
		<glob pattern="*.asmx" />
		<glob pattern="*.axd" />
		<sub-class-of type="text/plain" />
	</mime-type>
	
	<mime-type type="text/x-agda">
		<_comment>AGDA source code</_comment>
		<glob pattern="*.agda" />
		<sub-class-of type="text/plain" />
	</mime-type>
	
	<mime-type type="text/x-apl">
		<_comment>APL template source code</_comment>
		<glob pattern="*.apl" />
		<sub-class-of type="text/plain" />
	</mime-type>

	<mime-type type="text/x-java">
		<_comment>Java source code</_comment>
		<alias type="text/x-java-source" />
		<glob pattern="*.java" />
		<sub-class-of type="text/plain" />
	</mime-type>

	<mime-type type="text/x-ruby">
		<_comment>Ruby source code</_comment>
		<glob pattern="*.rb" />
		<magic priority="50">
			<match value="#!/usr/bin/env macruby" type="string" offset="0" />
			<match value="#! /usr/bin/env ruby" type="string" offset="0" />
		</magic>
		<sub-class-of type="text/plain" />
	</mime-type>

	<mime-type type="text/x-makefile">
		<_comment>Makefile</_comment>
		<glob pattern="Makefile" />
		<glob pattern="makefile" />
		<glob pattern="GNUmakefile" />

		<glob pattern="*.mak" />
		<glob pattern="*.mk" />
		<sub-class-of type="text/plain" />
	</mime-type>

	<mime-type type="text/x-properties">
		<_comment>Properties source code</_comment>
		<glob pattern="*.properties" />
		<glob pattern="*.prefs" />
		<glob pattern="*.gitconfig" />
		<glob pattern="*.editorconfig" />
		
		<sub-class-of type="text/plain" />
	</mime-type>

	<mime-type type="text/x-nginx">
		<_comment>Nginx conf</_comment>
		<glob pattern="*.nginxconf" />
	</mime-type>

	<mime-type type="text/x-dart">
		<_comment>Dart lang</_comment>
		<glob pattern="*.dart" />
		<sub-class-of type="text/plain" />
	</mime-type>
	
	<mime-type type="text/x-clojure">
		<_comment>Clojure source code</_comment>
		<glob pattern="*.clj" />
		<glob pattern="*.cl2" />
		<glob pattern="*.cljc" />
		<glob pattern="*.cljs" />
		<glob pattern="*.cljscm" />
		<glob pattern="*.cljx" />
		<glob pattern="*.hic" />
		<glob pattern="riemann.config" />
		<sub-class-of type="text/plain" />
	</mime-type>

	<mime-type type="text/x-sh">
		<_comment>UNIX/LINUX Shell Script</_comment>

	    <glob pattern="*.zsh"/>
	    
	    <glob pattern=".bash_logout" />
	    <glob pattern=".bash_profile" />
	    <glob pattern=".bashrc"/>
	    <glob pattern=".cshrc"/>
	    <glob pattern=".login"/>
	    <glob pattern=".profile"/>
	    <glob pattern=".zlogin"/>
	    <glob pattern=".zlogout"/>
	    <glob pattern=".zprofile"/>
	    <glob pattern=".zshenv"/>
	    <glob pattern=".zshrc"/>
	    <glob pattern="Dockerfile"/>
	    <glob pattern="bash_logout"/>
	    <glob pattern="bash_profile"/>
	    <glob pattern="bashrc"/>
	    <glob pattern="cshrc"/>
	    <glob pattern="login"/>
	    <glob pattern="profile"/>
	    <glob pattern="zlogin"/>
	    <glob pattern="zlogout"/>
	    <glob pattern="zprofile"/>
	    <glob pattern="zshenv"/>
	    <glob pattern="zshrc"/>
	    
	    <sub-class-of type="text/plain"/>
	</mime-type>
	
	<mime-type type="text/x-erlang">
	    <_comment>Erlang source code</_comment>
	    <magic priority="50">
			<match value="#!/usr/bin/env escript" type="string" offset="0" />
		</magic>
    	<sub-class-of type="text/plain"/>
  </mime-type>
	
</mime-info>